{
  "expo": {
    "name": "Anchor",
    "slug": "anchor-ironclad",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "dark",
    "backgroundColor": "#000000",
    "scheme": "anchor",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "android": {
      "package": "com.anchor.ironclad",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#000000"
      },
      "permissions": [
        "RECORD_AUDIO",
        "READ_CALENDAR",
        "WRITE_CALENDAR",
        "POST_NOTIFICATIONS",
        "ACCESS_NOTIFICATION_POLICY"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": {
            "scheme": "anchor"
          },
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ]
    },
    "plugins": [
      "expo-router",
      "expo-quick-actions",
      [
        "expo-calendar",
        {
          "calendarPermission": "Anchor needs calendar access to sync tasks."
        }
      ],
      [
        "expo-notifications",
        {
          "sounds": [],
          "android": {
            "useNextNotificationApi": true
          }
        }
      ],
      [
        "@jamsch/expo-speech-recognition",
        {
          "microphonePermission": "Anchor needs microphone access for voice input.",
          "speechRecognitionPermission": "Anchor needs speech recognition for voice input."
        }
      ],
      "expo-web-browser"
    ]
  }
}